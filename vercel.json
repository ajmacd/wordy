{
  "version": 2,
  "builds": [
    {
      "src": "client/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/web/dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "server/cmd/api/main.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/cmd/api/main.go"
    },
    {
      "src": "/(.*)\\.(js|css|png|svg|ico)$",
      "dest": "client/web/dist/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "client/web/dist/index.html"
    }
  ]
}
